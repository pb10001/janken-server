extends layout

block content
  div(class="container-fluid")
      h1(class='caption')= title
      form(class="input-group" method="post" class='mb-2')
        p User name(required)
        input(class='form-control mb-2' type="text" name="username" placeholder='User Name' required="requied")
        p Password(required)
        input(class='form-control mb-2' type='password' name="password" placeholder='Password' required="requied")
        p(class="text-danger")= flash
        input(class='btn btn-default mb-2' type="submit" value='Sign up')
