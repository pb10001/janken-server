extends layout

block content
  h1 プロフィール
  include menu
  div(class="panel panel-default")
    div(class="panel-heading")
      h3
        span= user_obj.nickname
        small= user_obj.user_name
    div(class="panel-body multiline")
      p #{user_obj.description}
    div(class="panel-footer")
      if(user_obj.user_name === user)
        a(class="btn btn-default" href="/users/edit/" + user_obj.user_name) 編集する
      span 登録日: #{user_obj.signup_date}
  p 勝ち: #{user_obj.wins}
  p 負け: #{user_obj.losses}
  p 引き分け: #{user_obj.draws}
  div
    h3 対戦履歴
    ul(class="list-group")
      each match in matches
        li(class="list-group-item") #{user_obj.nickname}: #{match.player_hand_str} ロボット: #{match.robot_hand_str} #{match.date}
